@import './normalize.styl'
@import './icons.styl'

$red = #FF0052

body
  font-family 'Cutive Mono', monospace
  background-color #000000
  color #FFFFFF
  font-size .7em

  @media screen and (min-width: 48.000em)
    font-size 1em

canvas
  display: block
  vertical-align: bottom

#particles
  position: absolute;
  z-index -1
  height: 100%;
  width: 100%;

main
  padding 20px

#main-header
  h1
    margin-bottom 10px
    margin-top 0px
    font-size 5em
  h2
    margin 0
    color $red
    font-size 3em

#profile
  margin-bottom 30px

  p
    line-height 1.6em
    font-size 1.4em

#main-footer
  .social-media
    h3
      margin-bottom 30px
      font-size 1.8em

    a
      display inline-block
      margin-left 10px
      margin-right 50px
      width 24px
      height 24px
      transform scale(2)
